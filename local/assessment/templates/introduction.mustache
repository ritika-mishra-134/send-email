<div class="row page-row">
    <div class="col-12 page-col">
        <div class="row">
            <div class="col-12">
                <h3><a name="intro">{{name}}</a></h3>
            </div>
            <div class="col-12">
                {{{assessmentinfo}}}
            </div>
            <div class="col-12 text-center mb-15">
                {{#paymentformhtml}}
                <table class="table table-hover" align="center">
                    <thead>
                        <tr>
                            <th colspan="2">
                                Payment Details
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>Unit Price</th>
                            <td>&#x20B9; {{netamount}}</td>
                        </tr>
                        <tr>
                            <th>Platform Fees</th>
                            <td>&#x20B9; {{platformfees}}</td>
                        </tr>
                        <tr>
                            <th>Total Net Amount</th>
                            <td>&#x20B9; {{totalnetamount}}</td>
                        </tr>
                        <tr>
                            <th>CGST {{cgstpercent}}</th>
                            <td>&#x20B9; {{cgst}}</td>
                        </tr>
                        <tr>
                            <th>SGST {{sgstpercent}}</th>
                            <td>&#x20B9; {{sgst}}</td>
                        </tr>
                        <tr>
                            <th>Total GST</th>
                            <td>&#x20B9; {{totalgst}}</td>
                        </tr>
                        <tr>
                            <th>Grand Total</th>
                            <td>&#x20B9; {{grandtotal}}</td>
                        </tr>
                        <tr>
                            <th class="h4">Net Payable (Rounded Off)</th>
                            <td class="h4">&#x20B9; {{netpayable}}</td>
                        </tr>
                    </tbody>
                </table>
                {{/paymentformhtml}}
                {{{paymentformhtml}}}
                {{#notavailable}}
                    <div class="alert alert-info">
                        This assessment is no longer available.
                        <a href="{{siteurl}}/local/assessment/my.php">Click here</a> to view other assessment.
                    </div>
                {{/notavailable}}
            </div>
        </div>
    </div>
</div>