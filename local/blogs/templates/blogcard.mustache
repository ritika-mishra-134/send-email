
{{#data}}
    <div class="row">
        {{#one}}
            <div class="col-sm-3 col-md-4 col-lg-3 mt-4">
                <div class="card">
                    <a href="{{site_url}}/local/blogs/blog_detail.php?id={{id}}"><img class="card-img-top " src="{{image}}"></a>
                    <h4 class="card-title">{{#shortentext}} 30, {{subject}} {{/shortentext}}</h4>
                    <p class="card-text">{{#shortentext}} 50,{{{summary}}} {{/shortentext}}</p>
                    <div class="card-footer">
                        <span class="float-right time-created">{{timecreated}}</span>
                        <span class="time-created"><i class=""></i>Darshika Shah</span>
                    </div>
                </div>
            </div>
        {{/one}}
    </div>
    <ul class="pagination pagination-lg blogs-pagination">
        {{#has_previous}}
            <li class="page-item previous">
                <button class="page-link">&laquo;</button>
            </li>
        {{/has_previous}}
        {{#pagination}}
            <li class="page-item {{#current}} active {{/current}}" value={{page}}>
                <button class="page-link">{{page}}</button>
            </li>
        {{/pagination}}
        {{#has_next}}
            <li class="page-item next">
                <button class="page-link" href="?page={{next_page_url}}">&raquo;</button>
            </li>
        {{/has_next}}
    </ul>
    
{{/data}}
 